using System;

namespace Convert Meters to Kilometers
{
    class Program
    {
        static void Main(string[] args)
        {
            double n = double.Parse(Console.ReadLine());
            MetersToKilometers(n);
        }
        static double MetersToKilometers(double n)
        {
            double x = 0;
            if(n > 0)
            {
              double a = n / 1000;
                Console.WriteLine($"{a:f2}");
            }
            return x;
        }
    }
}
