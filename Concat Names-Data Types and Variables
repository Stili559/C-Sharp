using System;

namespace Concat Names
{
    class Program
    {
        static void Main(string[] args)
        {
            string name = Console.ReadLine();
            string surname = Console.ReadLine();
            string simvol = Console.ReadLine();
            ConcatNames(name, surname, simvol);
        }

        static void ConcatNames(string name, string surname, string simvol)
        {

            Console.WriteLine(name + simvol + surname);
        }
    }
}
